{
  "name": "makenowjust.github.io",
  "private": true,
  "dependencies": {
    "h.js": "^1.1.1",
    "marked": "^0.3.5",
    "mithril": "^0.2.3"
  },
  "devDependencies": {
    "babel-preset-es2016": "^6.0.6",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "cpx": "^1.3.1",
    "csso": "^1.7.1",
    "gh-pages": "^0.11.0",
    "html-minifier": "^1.3.0",
    "licensify": "^3.1.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^1.6.0",
    "rimraf": "^2.5.2",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "babel": {
    "presets": [
      "es2016"
    ]
  },
  "scripts": {
    "build": "npm-run-all -s build:clean build:prepare -p build:copy:* -p build:minify:*",
    "build:clean": "rimraf dist",
    "build:prepare": "mkdirp dist/js dist/css",
    "build:copy:file": "cpx 'src/**/*.{md,ico,png.json,xml}' dist -v",
    "build:copy:profile-js": "node script/copy-profile.js > dist/profile.js",
    "build:minify:js": "browserify src/js/index.js -p licensify | uglifyjs - --compress --mangle --comments '/generated by licensify|true[|]false/' -o dist/js/index.js",
    "build:minify:html": "html-minifier src/index.html --collapse-whitespace --remove-comments --remove-attribute-quotes -o dist/index.html",
    "build:minify:css": "csso src/css/index.css --stat -o dist/css/index.css",
    "deploy": "npm-run-all -s build deploy:push",
    "deploy:push": "gh-pages -d dist",
    "watch": "npm-run-all -p watch:*",
    "watch:js": "watchify src/js/index.js -v -o dist/js/index.js",
    "watch:file": "cpx 'src/**/*.{html,css,md,ico,png,json,xml}' dist -w -v"
  }
}
